<Window x:Class="WpfApp7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp7"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Content="1 task" FontSize="30" Height="70" Width="140" Click="Button_Click_1"/>
        <Button Grid.Column="1" Content="2 task" FontSize="30" Height="70" Width="140" Click="Button_Click_2"/>
        <Button Grid.Row="1" Content="3 task" FontSize="30" Height="70" Width="140" Click="Button_Click_3"/>
        <Button Grid.Column="1" Grid.Row="1" Content="4 task" FontSize="30" Height="70" Width="140" Click="Button_Click_4"/>
    </Grid>
</Window>
